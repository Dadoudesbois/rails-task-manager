<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
  <% if @task.completed %>
    ✅ Completed !
  <% else %>
    ⚠️ To Do
  <% end %>
</p>
<div class="link btd">
<%= link_to 'Edit task', edit_path %> </h2>
</div>
<div class="link btd">
<%= link_to "Delete task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</div>
<div class="link btd ">
<%= link_to 'Back to tasks list', tasks_path %> </h2>
</div>
