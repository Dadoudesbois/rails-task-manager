<%= form_for(@task) do |f| %>
  <div class="form-group form">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group form">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<div class="link">
<%= link_to 'Back to tasks list', tasks_path %> </h2>
</div>
